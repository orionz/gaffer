#!/bin/bash

echo $0 $*

PACKAGE="<%= package %>"

if [ "$1" == "configure" ]; then
  cd /opt/$PACKAGE
  if [ -x configure ]; then
    echo "Running /opt/$PACKAGE/configure"
    ./configure $*
  fi

  if [ -f Gemfile ]; then
    bundle install --deployment
  fi
  
  if [ -f /etc/init/$PACKAGE.conf ]; then
    initctl restart $PACKAGE
  fi
fi	

exit 0

